---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

import {MUEBLES_SALA} from '../data/MUEBLES_CONTENIDO'
---

<Layout title="Catálogo de muebles de sala">
    <Navbar />
    <section class="catalog">
        <h1>Catálogo de Muebles de Sala</h1>
        <div class="catalog-container">
            {
                MUEBLES_SALA.map((mueble) => (
                    <div class='catalog-item'>
                        <img src={mueble.imagen} alt={mueble.nombre}/>
                        <h2>{mueble.nombre}</h2>
                        <p class="price">{mueble.precio}</p>
                        <button>Agregar al carrito</button>
                    </div>
                ))
            }
        </div>
    </section>
    <Footer></Footer>
</Layout>

<style>
    li.producto {
        list-style: none;
    }
</style>
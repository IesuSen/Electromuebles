}

.back-link:hover {
  color: rgb(205, 206, 228); /* Cambia el color al pasar el cursor */
}

/* --------------------------------- CARRITO DE COMPRAS -------------------------------------------*/
#contador-productos{
  font-size: 12px;
}

.count-products{
  position: absolute;
  top: 55%;
  right: 0;
  background-color: #050505;
  color: #fff;
  width: 25px;
  height: 25px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;

}

.container-icon {
  position: relative;
  display: inline-block; /* Para que el contenedor ocupe solo el ancho de su contenido */

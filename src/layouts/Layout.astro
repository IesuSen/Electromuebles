  width: 300px; /* Ancho del contenedor del carrito */
  background-color: #fff; /* Color de fondo del contenedor */
  border: 1px solid #ccc; /* Borde alrededor del contenedor */
  border-radius: 5px; /* Bordes redondeados */
  z-index: 1; /* Asegura que el contenedor esté encima de otros elementos */
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Sombra suave */
  padding: 10px; /* Espaciado interno del contenedor */
}

.hidden-cart{

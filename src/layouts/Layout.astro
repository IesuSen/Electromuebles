<style is:global>
	* {
  margin: 0;
  padding: 0;
  box-sizing: border-box; 
  font-family: lato;   
}

::after, ::before {
  box-sizing: inherit;
}

body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4; /* Color de fondo */
    overflow-x: hidden;
}

.catalog {
  margin-top: 100px; /* Ajusta el espacio para dejar espacio para la barra de navegación */
  text-align: center;
}
.catalog-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    grid-gap: 20px;
    padding: 20px;
}

.catalog-item {
    margin-bottom: 20px; 
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}


.catalog-item img {
    width: 100%;
    height: auto;
    border-radius: 10px;
}

.catalog-item h2 {
    margin-top: 10px;
    font-size: 18px;
}

.catalog-item p {
    margin-top: 10px;
    color: #555;
}

.catalog-item button {
    margin-top: 15px;
    padding: 8px 16px;
    background-color:  rgba(79, 52, 21, 0.8);  /* Color de fondo del botón */
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.catalog-item button:hover {
    background-color: #0056b3; /* Color de fondo del botón al pasar el cursor */
}

/* Estilos para la barra de navegación */
.navbar {
    width: 100%;
    height: 80px;
    display: flex;
    background-color: rgba(79, 52, 21, 0.8); /* Color oscuro de madera para la barra de navegación */
    backdrop-filter: blur(15px) saturate(160%);
    justify-content: space-between;
    padding: 8px 20px;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
}

.left {
    display: flex;
    justify-content: center; /* Centrar horizontalmente */
    align-items: center; /* Centrar verticalmente */
    list-style: none;
    gap: .5rem;
    cursor: pointer;
}

.left span {
    font-weight: bold;
    color: white;
    font-size: 20px;
    line-height: 80px; /* Ajusta el alto de línea para centrar verticalmente */
    padding-top: 5px; /* Ajusta el espacio superior para centrar */
}

.left * {
    pointer-events: auto; /* Permitir eventos de puntero en todos los elementos hijos */
}

.left span:hover {
    color: rgb(79, 80, 96); /* Cambiar el color al pasar el cursor */
}

.options {
    display: flex;
    justify-content: center;
    align-items: center;
    list-style: none;
    gap: 2.1rem;
}

.options li a {
    text-decoration: none;
    color: white;
    font-size: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color .3s ease;
}

.options li:hover > a{
    color: rgb(79, 80, 96);
}
.leftext a {
  text-decoration: none; /* Elimina el subrayado del texto */
}

.leftext span {
  font-weight: bold;
  color: white;
  font-size: 20px;
  transition: color 0.3s ease; /* Agrega transición de color para un efecto suave */
}

.leftext span:hover {
  color: rgb(79, 80, 96); /* Cambia el color al pasar el cursor */
}
/* Estilos para la página de descuentos */
.discounts {
    padding: 20px;
    margin-top: 70px; /* Ajusta el espacio para dejar espacio para la barra de navegación */
}

.discounts h1 {
    text-align: center;
    margin-bottom: 30px;
}

.back-link {
  display: block;
  text-align: center;
  margin-bottom: 40px; /* Ajusta el valor según el espacio que desees */
}

.discount img {
  max-width: 100%; /* Mantiene la imagen dentro del contenedor */
  height: auto; /* Permite que la imagen conserve su proporción de aspecto */
  border-radius: 10px; /* Redondea los bordes de las imágenes de descuento */
  margin-bottom: 20px; /* Espacio entre las imágenes */
}

.discounts-container {
  display: flex;
  flex-wrap: wrap; /* Permite que los elementos se envuelvan en múltiples líneas */
  justify-content: center; /* Centra los elementos horizontalmente */
  gap: 20px; /* Espacio entre los elementos */
  margin-top: 30px;
  flex-direction: row; /* Cambia la dirección del flujo a horizontal */
}

.discounts-container .row {
  flex: 1; /* Esto permite que ambas filas ocupen el mismo espacio */
  margin-right: -450px; /* Ajusta el margen entre las filas según sea necesario */
}

.discounts-container .row:last-child {
  margin-right: -610px; /* Elimina el margen derecho del último elemento .row */
}



.discount {
  text-align: center;
  width: calc(50% - 20px); /* Ancho del 50% con el espacio entre imágenes restado */
  margin-bottom: 40px; /* Espacio entre las filas de imágenes */
}

.discount h2 {
    margin-bottom: 10px;
}

.discount p {
    font-size: 16px;
}

.discount-header h1{
  text-align: center;
  margin-top: 20px;
}

.discount-header {
  background-color: #f8f8f8;
  padding: 5px;
  text-align: center;
  border-bottom: 1px solid #ccc;
}

.title {
  position: relative;
  width: 100%;
  height: 100px;
  margin-top: 80px;
  margin-bottom: -49px; /* Reducir el espacio inferior */
}

.title-img {
  width: 100%;
  height: 85px;
}

.title-text {
  position: absolute;
  z-index: 1;
  text-align: justify;
  color: rgba(190, 166, 138, 0.8); /* Color oscuro de madera para el texto del título */
  top: 50%;
  left: 50%;
  transform: translate(-50%, -70%); /* Centra vertical y horizontalmente */
}

.slider-frame {
	width: 1280px;
  height: auto;
	margin:50px auto 0;
	overflow: hidden;
}

.slider-frame img {
	max-width: 100%; /* Ajusta la imagen al ancho máximo del contenedor */
	max-height: 70vh; /* Establece una altura máxima del 80% del viewport height */
	height: auto; /* Permite que la imagen conserve su proporción de aspecto */
}

@keyframes slideAnimation {
  0% { margin-left: 0; }
  25% { margin-left: -100%; }
  50% { margin-left: -200%; }
  75% { margin-left: -300%; }
  100% { margin-left: -300%; }
}

.slider-frame ul {
  display: flex;
  padding: 0;
  width: 400%;
  animation: slideAnimation 15s infinite alternate ease-in-out;
}

.slider-frame li {
  width: 25%; /* Ajusta el ancho del slide */
  list-style: none;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Estilo para el punto activo en cada slide */
.slider-frame:nth-child(1) .dot:nth-child(1),
.slider-frame:nth-child(2) .dot:nth-child(2),
.slider-frame:nth-child(3) .dot:nth-child(3),
.slider-frame:nth-child(4) .dot:nth-child(4) {
  background-color: #717171;
}

/* Estilos para los puntos */
.slider-dots {
  text-align: center;
  margin-top: 20px;
}

.dot {
  width: 20px;
  height: 20px;
  background-color: #a1a0a0;
  border-radius: 50%;
  opacity: 0.5;
  display: inline-block;
  margin: 0 5px;
  cursor: pointer;
  z-index: 1;
  
}

/* Estilo para el punto activo */
.dot.active {
  background-color: #050505;
}

.footer {
  bottom: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.8); /* Color oscuro de madera para el footer */
  text-align: center;
  padding: 5px 0;
  border-top-left-radius: 20px; /* Redondeo en la esquina superior izquierda */
  border-top-right-radius: 20px; /* Redondeo en la esquina superior derecha */
  color: white; /* Color blanco para el texto dentro del footer */
}

.list-show {
  display: none;
  position: absolute;
  background-color: rgba(79, 52, 21, 0.8); /* Color oscuro de madera para el fondo del menú desplegable */
  padding: 10px;
  list-style: none;
  align-items: center;
  justify-content: center;
  gap: 10px;
  flex-direction: column;
}

.list-show li a {
  color: white;
}

.list-show li:hover a {
  color: rgb(79, 80, 96);
}

.catalogo {
  cursor: pointer;
  color: white;
}

.catalogo-icon {
  width: 10px;
}

.catalogo:hover .list-show {
  display: flex;
}

.catalogo-text {
  color: white;
}

.catalogo:hover .catalogo-text, .catalogo:hover .catalogo-icon{
  color: rgb(79, 80, 96);
}

.description {
  display: flex;
  justify-content: center; /* Centra horizontalmente */
}

.section-description, .aside {
  width: 50%; /* Ocupa el 50% del ancho del contenedor padre */
  margin: 0 10px; /* Espaciado entre los elementos */
}

.section-description {
  text-align: center; /* Alinea el contenido al centro */
}

.img-description {
  border-radius: 10px; /* Redondea los bordes de la imagen */
}

.aside {
  font-size: 16px; /* Tamaño de fuente más grande */
  line-height: 1.6; /* Altura de línea aumentada para mejor legibilidad */
  color: #333; /* Color de texto */
  background-color: #f8f8f8; /* Color de fondo */
  padding: 20px; /* Espaciado interno */
  border-radius: 10px; /* Redondea los bordes del aside */
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Sombra suave */
}

.ubication {
  display: flex;
  justify-content: center; /* Centra horizontalmente */
  margin-bottom: -49px; /* Reducir el espacio inferior */
}

.section-ubication, .aside-ubication {
  width: 50%; /* Ocupa el 50% del ancho del contenedor padre */
  margin: 0 10px; /* Espaciado entre los elementos */
}

.section-ubication {
  text-align: center; /* Alinea el contenido al centro */
}

.img-ubication {
  border-radius: 10px; /* Redondea los bordes de la imagen */
}

.aside-ubication {
  font-size: 16px; /* Tamaño de fuente más grande */
  line-height: 1.6; /* Altura de línea aumentada para mejor legibilidad */
  color: #333; /* Color de texto */
  background-color: #f8f8f8; /* Color de fondo */
  padding: 20px; /* Espaciado interno */
  border-radius: 10px; /* Redondea los bordes del aside */
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Sombra suave */
}

/* Estilos para el encabezado de la pagina de Ayuda y Soporte */
.help-header {
  background-color: #f8f8f8;
  padding: 20px;
  text-align: center;
  border-bottom: 1px solid #ccc;
}

.help-page h1{
  margin-top: 30px;
}

.help-header h1 {
  margin-bottom: 10px;
}

.back-link {
  color: #007bff; /* Color azul para el enlace */
  text-decoration: none;
}

/* Estilos para el contenido */
.help-content {
  padding: 20px;
}

.help-content h2 {
  margin-top: 20px;
}

.help-content ul {
  list-style: none;
  padding-left: 0;
}

.help-content ul li {
  margin-bottom: 10px;
}

.help-content ul li strong {
  font-weight: bold;
}

.help-page {
  max-width: 800px;
  margin: 0 auto;
}

